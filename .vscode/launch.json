    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        // python run.py -c configs/<config-file-name.yaml>
        {
            "name": "Python Debugger: Run Config",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": [
                "-c",
                "${workspaceFolder}/configs/vae.yaml"
            ],
            "console": "integratedTerminal"
        }
    ]
}